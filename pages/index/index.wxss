.onimg{
    text-align: center;

}

.onimg_title {
    color: #8a8a8a;
    font-size: 14px;
}
/*伪元素实现*/

.onimg_title:before{

    display: inline-block;

    position: relative;

    top:-7px;

    right: 20px;

    content: "";

    width: 50px;

    height: 0px;

    border: 0.1px solid #8a8a8a;

}

.onimg_title:after{

    display: inline-block;

    position: relative;

    top:-7px;

    left: 20px;

    content: "";

    width: 50px;

    color: #8a8a8a;

    height: 0px;

    border: 0.1px solid #8a8a8a;

}

